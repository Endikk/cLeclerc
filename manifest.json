{
  "name": "cLeclerc",
  "version": "1.0.3",
  "description": "Remplace toutes les images sur les sites web par des photos de Charles Leclerc, pilote Ferrari F1",
  "author": "cLeclerc Contributors",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/main.js"],
      "type": "module",
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/all/*",
        "images/profil/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "images/profil/charles1.png",
    "48": "images/profil/charles2.png",
    "128": "images/profil/charles3.png"
  },
  "permissions": [],
  "host_permissions": ["<all_urls>"]
}